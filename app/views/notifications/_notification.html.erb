<style>
  .notification {
    -moz-transition: all 0.1s ease-in;
    -o-transition: all 0.1s ease-in;
    -webkit-transition: all 0.1 ease-in;
    transition: all 0.1s ease-in;


  }
  .notification:hover {
      background-color: #e9ecef;
    }
</style>
<% tweet = Tweet.find_by(id: notification.parameters[:tweet_id]) %>
<div class="notification d-flex gap-3 p-2">
  <% if notification.trackable_type == "Like" %>
    <div class="fs-4">
      <i class = "bi bi-heart-fill" style = "color: #de5c9d" ></i>
    </div>
  <% else %>
    <div class="fs-4 text-primary">
      <i class = "bi bi-stars"></i>
    </div>
  <% end %>
  <div class="noti-details">
    <div class="icon fs-6 mb-1">
      <% if owner.profile_picture.attached? %>
        <%= image_tag(owner.profile_thumbnail, size: "40x40" , class: "rounded-circle")%>
      <% else %>
        <div class="icon fs-2">
          <i class="bi bi-person-circle"></i>
        </div>
      <% end %>
    </div>
    <span><strong><%= owner.display_name %></strong>
      <%= t("public_activity.#{notification.key}")%>
    </span>
    <% if notification.key == 'reply_tweet.create' %>
      <%= link_to tweet_path(tweet.parent_tweet), class: "text-decoration-none" do %>
        <p class = "text-secondary mt-1 mb-0"><%= tweet.body %></p>
      <% end %>
    <% elsif notification.trackable_type != "Following" %>
      <%= link_to tweet_path(tweet), class: "text-decoration-none" do %>
        <p class = "text-secondary mt-1 mb-0"><%= tweet.body %></p>
      <% end %>
    <% end %>
  </div>
</div>
