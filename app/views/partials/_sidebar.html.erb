<ul class="sidebar d-flex flex-column align-items-start gap-3">
  <%= link_to dashboard_path, class: "btn btn-light rounded-pill" do %>
    <div class="twitter-icon fs-3">
      <i class="bi bi-twitter"></i>
    </div>
  <% end %>
  <%# Home %>
  <%= link_to dashboard_path, class: "btn btn-light rounded-pill" do %>
    <li class="sidebar-item fs-4 d-flex justify-content-center align-items-center gap-2">
      <div class="icon">
        <i class="bi bi-house-door"></i>
      </div>
      <span class="">
        Home
      </span>
    </li>
  <% end %>
  <%# Explore %>
  <%= link_to dashboard_path, class: "btn btn-light rounded-pill" do %>
    <li class="sidebar-item fs-4 d-flex justify-content-center align-items-center gap-2">
      <div class="icon">
        <i class="bi bi-hash"></i>
      </div>
      <span class="">
        Explore
      </span>
    </li>
  <% end %>
  <%# Notifications %>
  <%= link_to dashboard_path, class: "btn btn-light rounded-pill" do %>
    <li class="sidebar-item fs-4 d-flex justify-content-center align-items-center gap-2">
      <div class="icon">
        <i class="bi bi-bell"></i>
      </div>
      <span class="">
        Notifications
      </span>
    </li>
  <% end %>
  <%# Messages %>
  <%= link_to dashboard_path, class: "btn btn-light rounded-pill" do %>
    <li class="sidebar-item fs-4 d-flex justify-content-center align-items-center gap-2">
      <div class="icon">
        <i class="bi bi-envelope"></i>
      </div>
      <span class="">
        Messages
      </span>
    </li>
  <% end %>
  <%# Profile %>
  <%= link_to dashboard_path, class: "btn btn-light rounded-pill" do %>
    <li class="sidebar-item fs-4 d-flex justify-content-center align-items-center gap-2">
      <div class="icon">
        <i class="bi bi-person"></i>
      </div>
      <span class="">
        Profile
      </span>
    </li>
  <% end %>
  <button type="button" class="btn btn-lg w-100 btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#regularScreenModal">
    Tweet
  </button>
</ul>
<%# User Dropup %>
<ul class="dropup">
  <button type="button" class="btn btn-light rounded-pill fs-1 d-flex justify-content-center align-items-center gap-2" data-bs-toggle="dropdown" aria-expanded="false">
    <div class="icon">
      <i class="bi bi-person-circle"></i>
    </div>
    <div class = "fs-6 fw-lighter">
      @<%= current_user.username %>
    </div>
  </button>
  <ul class="dropdown-menu fs-5 rounded-5 p-3">
    <li class="dropdown-item">
      <%= link_to "Show Profile", new_username_path, class: "nav-link"%>
    </li>
    <li class="dropdown-item">
      <%= link_to "Log Out", destroy_user_session_path, data: {"turbo-method": :delete}, class: "nav-link", style: "background:none; border:none;"%>
    </li>
  </ul>
</ul>
<!-- Modal -->
<div class="modal" id="regularScreenModal" tabindex="-1" aria-labelledby="regularScreenModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content p-3">
      <button type="button" id = "regularScreenModalCloseBtn" class="btn-close mb-2" data-bs-dismiss="modal" aria-label="Close"></button>
      <%= render partial: "tweets/form" %>
    </div>
  </div>
</div>
