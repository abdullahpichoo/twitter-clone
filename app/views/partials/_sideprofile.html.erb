<section class="mt-5 col">
  <div class="card">
    <div class="container p-3 d-flex gap-3 align-items-center">
      <div class="pfp-placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
          <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
          <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
        </svg>
      </div>
      <div class="username-follow-info">
        <h3>
          <%= current_user.username %>
        </h3>
        <div class="follow d-flex gap-3">
          <div class="fw-light">
            Followers
            <span class="fw-bold">
              500
            </span>
          </div>
          <div class="fw-light">
            Following
            <span class="fw-bold">
              500
            </span>
          </div>
        </div>
      </div>
    </div>
    <%= link_to "Show Profile", edit_user_registration_path, class: "m-3 btn btn-outline-primary"%>
  </div>
</section>
