<style>
  .page{
    height: 100vh;
    opacity: 0.9;
  }
</style>
<div class="bg-primary page">
  <div class="d-flex flex-column align-items-center gap-4 container">
    <h1 class = "fw-bolder text-white mt-5">Welcome to Whisper!</h1>
    <div class="card w-40 text-center rounded-5">
      <h2 class = "card-header mb-3">Register</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
        <div class="container ps-5 pe-5">
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mb-2">
            <%= f.label :email, class: "fs-5 mb-1" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>
          <div class="field mb-2">
            <%= f.label :password, class: "fs-5 mb-1"  %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>
          <div class="field mb-2">
            <%= f.label :password_confirmation, class: "fs-5 mb-1"  %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>
          <div class="actions mt-3 mb-2">
            <%= f.submit "Sign up", class: "btn btn-lg btn-primary" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
