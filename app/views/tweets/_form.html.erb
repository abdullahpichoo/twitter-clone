<div class="card border border-light-subtle rounded-0">
  <h2 class = "text-start ms-2">Home</h2>
  <div class="d-flex flex-row justify-content-evenly">
    <div class="pfp-placeholder m-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
      </svg>
    </div>
    <div class="w-100 m-2">
      <%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true do |form| %>
        <div>
          <%= form.text_area :body, placeholder: "What's Happening?", class: "form-control form-control-lg border border-light"%>
        </div>
        <div class = "mt-2 mb-2 text-end">
          <%= form.submit "Tweet", class: "btn btn-lg rounded-pill btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
