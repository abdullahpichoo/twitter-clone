<style>
  .open-profile-icon{
    color: #B0B0B0;
  }
</style>
<div class="border border-light-subtle border-top-0 p-3">
  <div class="w-100 d-flex justify-content-between gap-4">
    <div class = "d-flex justify-content-between align-items-center gap-2">
      <div class="pfp">
        <% if user.profile_picture.attached? %>
          <%= image_tag(user.profile_page_thumbnail, size: '50x50' , class: "rounded-circle") %>
        <% else %>
          <%= image_tag "user-blank.png", size: "50x50" %>
        <% end %>
      </div>
      <div class="d-flex flex-column text-start">
        <div class="full-name fw-bolder">
          <%= user.display_name %>
        </div>
        <div class="username text-secondary">
          @<%= user.username %>
        </div>
      </div>
    </div>
    <div id = "follow-unfollow-button" >
      <%= link_to user_path(user), class: "open-profile-icon fs-2" do %>
        <i class="bi bi-arrow-up-right-circle-fill"></i>
      <% end %>
    </div>
  </div>
</div>
