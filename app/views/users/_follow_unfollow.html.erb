<%= turbo_frame_tag "follow-unfollow-btn" do %>
  <span>
    <% if user.followers.include?(current_user) %>
      <%= link_to "Unfollow", user_following_path(user, current_user.followings.find_by(following_user_id: user)), data: {"turbo-method": 'delete' }, class: "fw-bold btn btn-outline-primary border border-2 rounded-pill"%>
    <% else %>
      <%= link_to "Follow", user_followings_path(current_user, following_user_id: user.id), data: {"turbo-method": 'post' }, class: "fw-bold btn btn-outline-primary border border-2 rounded-pill"%>
    <% end %>
  </span>
<% end %>
